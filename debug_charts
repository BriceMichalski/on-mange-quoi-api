---
# Source: charts/templates/serviceaccount.yaml
apiVersion: v1
kind: ServiceAccount
metadata:
  name: omq-charts
  labels:
    helm.sh/chart: charts-0.1.0
    app.kubernetes.io/name: charts
    app.kubernetes.io/instance: omq
    app.kubernetes.io/version: "0.0.1-snapshot"
    app.kubernetes.io/managed-by: Helm
---
# Source: charts/templates/service.yaml
apiVersion: v1
kind: Service
metadata:
  name: omq-charts
  labels:
    helm.sh/chart: charts-0.1.0
    app.kubernetes.io/name: charts
    app.kubernetes.io/instance: omq
    app.kubernetes.io/version: "0.0.1-snapshot"
    app.kubernetes.io/managed-by: Helm
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: http
      protocol: TCP
      name: http
  selector:
    app.kubernetes.io/name: charts
    app.kubernetes.io/instance: omq
---
# Source: charts/templates/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: omq-charts
  labels:
    helm.sh/chart: charts-0.1.0
    app.kubernetes.io/name: charts
    app.kubernetes.io/instance: omq
    app.kubernetes.io/version: "0.0.1-snapshot"
    app.kubernetes.io/managed-by: Helm
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: charts
      app.kubernetes.io/instance: omq
  template:
    metadata:
      labels:
        app.kubernetes.io/name: charts
        app.kubernetes.io/instance: omq
    spec:
      serviceAccountName: omq-charts
      securityContext:
        {}
      containers:
        - name: charts
          securityContext:
            {}
          image: "ghcr.io/bricemichalski/omq:latest"
          imagePullPolicy: Always
          ports:
            - name: http
              containerPort: 80
              protocol: TCP
          livenessProbe:
            httpGet:
              path: /
              port: http
          readinessProbe:
            httpGet:
              path: /
              port: http
          resources:
            {}
---
# Source: charts/templates/ingress.yaml
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: omq-charts
  labels:
    helm.sh/chart: charts-0.1.0
    app.kubernetes.io/name: charts
    app.kubernetes.io/instance: omq
    app.kubernetes.io/version: "0.0.1-snapshot"
    app.kubernetes.io/managed-by: Helm
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt
    kubernetes.io/ingress.class: traefik
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
    traefik.ingress.kubernetes.io/router.middlewares: null
spec:
  ingressClassName: traefik
  tls:
    - hosts:
        - "api.on-mange-quoi.com"
      secretName: api.on-mange-quoi.com
  rules:
    - host: "api.on-mange-quoi.com"
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: omq-charts
                port:
                  number: 80
---
# Source: charts/templates/tests/test-connection.yaml
apiVersion: v1
kind: Pod
metadata:
  name: "omq-charts-test-connection"
  labels:
    helm.sh/chart: charts-0.1.0
    app.kubernetes.io/name: charts
    app.kubernetes.io/instance: omq
    app.kubernetes.io/version: "0.0.1-snapshot"
    app.kubernetes.io/managed-by: Helm
  annotations:
    "helm.sh/hook": test
spec:
  containers:
    - name: wget
      image: busybox
      command: ['wget']
      args: ['omq-charts:80']
  restartPolicy: Never
